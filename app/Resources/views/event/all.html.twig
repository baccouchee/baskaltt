{% extends 'baseAdmin.html.twig' %}

{% block content %}

    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title"> Listes des Evenement </strong>
                        </div>

                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">




                                <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Nom</th>
                                    <th>Catégorie</th>
                                    <th>Déscription</th>
                                    <th>Date Début</th>
                                    <th>Date Fin</th>
                                    <th>Emplacement</th>
                                    <th>Photo</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td><a href="{{ path('event_show', { 'id': event.id }) }}" style="width:50px;height: 50px;">{{ event.id }}</a></td>
                                        <td> {{ event.nom }}</td>
                                        <td>{{ event.cat.nomC }}</td>
                                        <td>{{ event.description }}</td>
                                        <td>{% if event.dateDeb %}{{ event.dateDeb|date('Y-m-d') }}{% endif %}</td>
                                        <td>{% if event.dateFin %}{{ event.dateFin|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ event.emplacement }}</td>
                                        <td><img src="{{ asset('images/' ~ event.photo) }}"></td>
                                        <td>
                                            <a href="{{ path('event_show', { 'id': event.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                                            <a href="{{ path('event_edit', { 'id': event.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>


                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('event_new') }}" class="btn btn-outline-secondary">Ajouter un nouveau évenement</a>
                        </div>
                    </div>
                </div>
            </div></div></div>


    </div>
    </div><!-- .animated -->
    </div><!-- .content -->
    <ul>
        <li>

        </li>
    </ul>



{% endblock %}
