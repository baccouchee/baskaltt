{% extends 'baseAdmin.html.twig' %}
{% block titre %} Ajouter Meeting {% endblock %}
{% block content %}

    <div class="card-body card-block">

        {{ form_start(form,{ 'attr': {'novalidate': 'nonvalidate'} }) }}

        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Cat√©gorie </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.categorie, { 'attr': {'class': 'form-control'} }) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
                <div style="color: red">{{ form_errors(form.categorie) }}</div>
            </div>

        </div>

        <div class="row form-group">

            <div class="col col-md-3"><label class=" form-control-label">Sujet </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.sujet, { 'attr': {'class': 'form-control'} }) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
                <div style="color: red"> {{ form_errors(form.sujet) }}</div>
            </div>

        </div>
        <div class="row form-group">
            <div class="col col-md-3"><label class=" form-control-label">Date debut</label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.startsDate, { 'attr': {'class': 'form-control'} }) }}
                <small class="help-block form-text"></small></div>
            <div class="col-12 col-md-9" style="color: red">  {{ form_errors(form.startsDate) }}</div>
        </div>
        <div class="row form-group">
            <div class="col col-md-3"><label class=" form-control-label">Date Fin </label></div>
            <div class="col-12 col-md-9">{{ form_widget(form.date, { 'attr': {'class': 'form-control'} }) }}<small class="form-text text-muted"></small></div>
            <div class="col-12 col-md-9">
                <div style="color: red">  {{ form_errors(form.date) }}</div>
            </div>
        </div>

        <div class="card-footer">
            <button type="submit" value="Create" class="btn btn-primary btn-sm" >
                <i class="fa fa-dot-circle-o"></i> Ajouter
            </button>
        </div>
        {{ form_end(form) }}
    </div>


{% endblock %}
