{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </head>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title"> Listes des articles </strong>
                        </div>

                        <div class="card-body">

                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">

                                <thead>

                                <tr>

                                    <th>Nom</th>
                                    <th>Description</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for category in categories %}
                                    <tr>
                                        <td>{{ category.title }}</td>
                                        <td>{{ category.description }}</td>
                                        <td>
                                            <a href="{{ path('category_show', { 'id': category.id }) }}"class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>show</a>
                                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i>edit</a>
                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('category_new') }}" class="btn btn-outline-secondary">Ajouter une categorie</a>
                        </div>
                    </div>
                </div>
            </div></div></div>


    </div>
    </div><!-- .animated -->
    </div><!-- .content -->
    <ul>
        <li>

        </li>
    </ul>



{% endblock %}

