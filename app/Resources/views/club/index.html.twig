{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <div class="content mt-3">
    <div class="animated fadeIn">
    <div class="row">

    <div class="col-md-12">
    <div class="card">
    <div class="card-header">
        <strong class="card-title"> Listes des Clubs </strong>
    </div>

    <div class="card-body">
    <table id="bootstrap-data-table-export" class="table table-striped table-bordered">


    <thead>
        <tr>
            <th>Nom Club</th>
            <th>Emplacement</th>
            <th>Responsable</th>
            <th>Categorie</th>
            <th>Description</th>
            <th>Etat</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.nomclub }}</td>
                <td>{{ club.emplacement }}</td>
                <td>{{ club.responsable }}</td>
                <td>{{ club.categorie }}</td>
                <td>{{ club.description }}</td>
                <td>{{ club.etat }}</td>
                <td><img src="{{ asset('images/' ~ club.image) }}"></td>
                <td>
                    <ul>

                            <a href="{{ path('club_show', { 'id': club.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i> View </a>
                            <a href="{{ path('club_edit', { 'id': club.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Edit </a>
                            <a href="{{ path('club_valider', { 'id': club.id }) }}" class="btn btn-success btn-xs"><i class="fa fa-magic"></i> Valider </a>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
    </div>
    </div>
    </div></div></div>


    </div>
    </div><!-- .animated -->
    </div><!-- .content -->
    <ul>
        <li>

        </li>
    </ul>
{% endblock %}