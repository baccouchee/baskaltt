{% extends 'baseAdmin.html.twig' %}

{% block content %}
    <head>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
        <script>
            $(document).ready(function(){
                $("#myInput").on("keyup", function() {
                    var value = $(this).val().toLowerCase();
                    $("#myTable tr").filter(function() {
                        $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                    });
                });
            });
        </script>
    </head>
    <div class="content mt-3">
        <div class="animated fadeIn">
            <div class="row">

                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <strong class="card-title"> Listes des articles </strong>
                        </div>

                        <div class="card-body">
                            <table id="bootstrap-data-table-export" class="table table-striped table-bordered">




                                <thead>
                                <tr>
                                    <th>Titre</th>
                                    <th>Date de cr√©ation</th>
                                    <th>Contenu</th>
                                    <th>Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for article in articles %}
                                    <tr>
                                        <td><a href="{{ path('article_show', { 'id': article.id }) }}">{{ article.title }}</a></td>
                                        <td>{% if article.date %}{{ article.date|date('Y-m-d') }}{% endif %}</td>
                                        <td>{{ article.content }}</td>
                                        <td>
                                            <a href="{{ path('article_showb', { 'id': article.id }) }}" class="btn btn-primary btn-xs"><i class="fa fa-folder"></i>View</a>
                                            <a href="{{ path('article_edit', { 'id': article.id }) }}" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i>Edit</a>


                                        </td>

                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                            <a href="{{ path('article_new') }}" class="btn btn-outline-secondary">Ajouter un article</a>
                        </div>
                    </div>
                </div>
            </div></div></div>


    </div>
    </div><!-- .animated -->
    </div><!-- .content -->
    <ul>
        <li>

        </li>
    </ul>



{% endblock %}


